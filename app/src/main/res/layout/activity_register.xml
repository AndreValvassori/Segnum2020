<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ly_register_TopSegnum">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_ff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/titulo"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register_newuser"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ly_register_TopSegnum"
        android:layout_marginTop="30dp"
        android:text="@string/newuser"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_register_email"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/et_register_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/email"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_register_email"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:text=""
        android:inputType="textEmailAddress"
        android:hint="@string/meuemail"/>

    <TextView
        android:id="@+id/tv_register_pass"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/et_register_email"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/pass"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_register_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_register_pass"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:text=""
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tv_register_name"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/tv_register_newuser"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/nome"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_register_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_register_name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:text=""
        android:inputType="text"
        android:hint="@string/nomecompleto"/>

    <TextView
        android:id="@+id/tv_register_phone"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/et_register_pass"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/telefone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_register_phone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:text=""
        android:inputType="phone"
        android:hint="@string/telefonevalue"/>

    <TextView
        android:id="@+id/tv_register_birthday"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/et_register_phone"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/datanascimento"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/black"/>

    <DatePicker
        android:id="@+id/dp_register_birthday"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_register_birthday"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:calendarTextColor="@android:color/black"
        android:backgroundTint="@android:color/white"/>

    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/dp_register_birthday"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:background="@drawable/roundedbutton"
        android:text="@string/registrar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/btn_register_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/btn_register_register"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/cancelar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>