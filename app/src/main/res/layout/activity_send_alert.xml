<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrevalvassori.segnum2020.Controller.SendAlertActivity">

    <LinearLayout
        android:id="@+id/ly_sendevent_TopSegnum"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_ff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/titulo"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sendalert_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ly_sendevent_TopSegnum"
        android:layout_marginTop="30dp"
        android:text="Enviar novo alerta"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mv_sendalert_map"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_sendalert_title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_sendalert_tipo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mv_sendalert_map"
        android:text="Tipo"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/ly_sendevent_EventType"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tv_sendalert_tipo">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_btn_speak_now"/>
            <Spinner
                android:id="@+id/sp_sendalert_tipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sendalert_Nome"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ly_sendevent_EventType"
        android:text="Nome"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_sendalert_Nome"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_sendalert_Nome"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:text=""
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_sendalert_Descricao"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_sendalert_Nome"
        android:text="Descrição"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_sendalert_Descricao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_sendalert_Descricao"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:text=""
        android:inputType="text"/>

    <Button
        android:id="@+id/btn_sendalert_enviar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="btnSendAlertOnClick"
        android:text="Salvar!" />

</RelativeLayout>