<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrevalvassori.segnum2020.Main2Activity">

    <LinearLayout
        android:id="@+id/ly_main_topo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_Alertas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Alertas"/>

            <Button
                android:id="@+id/btn_main_Mapa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mapa"/>
            <Button
                android:id="@+id/btn_main_MeusAlertas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Meus Alertas"/>

        </LinearLayout>

    </LinearLayout>


    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/ly_main_topo"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.andrevalvassori.segnum2020.Main2Activity">
    </fragment>

        <Button
            android:id="@+id/btn_main_SendAlert"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/roundedbutton"
            android:layout_alignParentBottom="true"
            android:text="Enviar Novo Alerta"/>


</RelativeLayout>
