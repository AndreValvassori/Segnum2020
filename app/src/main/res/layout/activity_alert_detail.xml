<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrevalvassori.segnum2020.Controller.AlertDetailActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alertdetail_categoria"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/greyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria do Alerta"></TextView>
        <EditText
            android:layout_marginTop="4dp"
            android:id="@+id/et_alertdetail_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/greyColor"
            android:textColor="@color/colorWhite"
            android:inputType="text"
            android:enabled="false"
            android:focusable="false"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/greyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do Alerta"></TextView>
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/et_alertdetail_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/greyColor"
            android:textColor="@color/colorWhite"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:enabled="false"
            android:focusable="false"/>


        <com.google.android.gms.maps.MapView
            android:id="@+id/map_alertdetail_map"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>